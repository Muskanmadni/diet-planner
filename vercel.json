{
  "version": 2,
  "builds": [
    {
      "src": "api.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "/api.py"
    },
    {
      "src": "/images/(.*)",
      "dest": "/api.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api.py"
    }
  ],
  "functions": {
    "api.py": {
      "memory": 1024,
      "maxDuration": 30
    }
  }
}